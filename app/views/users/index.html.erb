<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.username %>
      <%= link_to 'Edit' , edit_user_path(user) %>
      <%= link_to 'Delete' ,user_path(user), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %>
    </li>
    <% end %>
</ul>
<%= button_to "Sign out", destroy_user_session_path, method: :delete %>