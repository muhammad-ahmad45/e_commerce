<div class="col-lg-4 mx-auto">
  <h1>Welcome to our website!</h1>
  <div class="col-lg-4 mx-auto">
    <h2>All Users</h2>
  </div>
</div>  
<br>
<table class="table table-bordered" style="border-width:4px">
  <thead>
    <tr> 
      <th> Username </th> 
      <th> UserID </th> 
    
      <% if current_user.if_admin? %>
        <th> Additional details</th> 
      <% end %> 
     
    </tr>  
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>  <%= user.username %> </td>
        <td>  <%= user.id %> </td>
        <td> 
          <% if current_user.if_admin? %>
            <%= button_to 'Show', user_path(user), method: :get, class: "btn btn-primary" %>
          <% end %> 
        </td>
      </tr>
    <% end %> 
  </tbody>
</table>
<%= button_to 'Show Products', products_path, method: :get, class: "btn btn-primary"%>

<br>
<%= paginate @users %>

