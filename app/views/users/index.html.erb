<h1>Welcome to our website!</h1>
<h2>All Users</h2>
<br>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.username %>
    </li>

    <% if current_user.if_admin? %>
       <%= render 'roles/form', user: user %> 
       <br>

       <%= button_to 'Edit', edit_user_path(user), method: :get %>
       <%= button_to 'Delete', user_path(user), method: :delete, turbo_confirm: "Are you sure?" %>

       <p>
         <% user.roles.each do |role| %>
           <%= role.user_role %>
         <% end %> 
       </p>

    <% end %>
  <% end %>
<%= button_to 'Show Products', products_path, method: :get%>
</ul>
